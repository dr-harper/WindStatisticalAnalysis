file = {:C$\backslash$:/Users/mh8g10/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Gigovi{\'{c}} et al. - 2017 - Application of the GIS-DANP-MABAC multi-criteria model for selecting the location of wind farms A case study of.pdf:pdf},
issn = {09601481},
journal = {Renewable Energy},
